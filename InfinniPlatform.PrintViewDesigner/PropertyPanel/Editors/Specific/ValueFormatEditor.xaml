<editors:PropertyEditorBase x:Class="InfinniPlatform.PrintViewDesigner.PropertyPanel.Editors.Specific.ValueFormatEditor"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                            xmlns:editors="clr-namespace:InfinniPlatform.PrintViewDesigner.PropertyPanel.Editors"
                            xmlns:valueConverters="clr-namespace:InfinniPlatform.PrintViewDesigner.PropertyPanel.Editors.ValueConverters">

    <editors:PropertyEditorBase.Resources>
        <valueConverters:ValueFormatConverter x:Key="DisplayFormatValueConverter" />
    </editors:PropertyEditorBase.Resources>

    <dxe:ButtonEdit Name="Editor"
                    Foreground="Black"
                    IsReadOnly="True"
                    IsTextEditable="False"
                    AllowNullInput="True"
                    NullValue="{x:Null}"
                    EditValue="{Binding Path=EditValue, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type editors:PropertyEditorBase}}}"
                    DisplayTextConverter="{StaticResource DisplayFormatValueConverter}"
                    DefaultButtonClick="OnShouwEditor" />

</editors:PropertyEditorBase>